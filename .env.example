# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_api_key_here

# OpenRouter Model Configuration
# Default model for dependency inference
# Options: openai/gpt-4, openai/gpt-3.5-turbo, anthropic/claude-2, etc.
OPENROUTER_MODEL=openai/gpt-4

# OpenRouter Request Timeout (seconds)
OPENROUTER_TIMEOUT=30

# MongoDB Atlas Configuration
# MongoDB connection string (use mongodb+srv:// for Atlas)
MONGODB_URI=mongodb+srv://admin:se-b_is_the_best@cluster.mongodb.net/

# MongoDB Database Name
MONGODB_DATABASE=task_dependency_db

# MongoDB Collection Name
MONGODB_COLLECTION=tasks
